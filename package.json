{
  "name": "fullstack-workshop",
  "scripts": {
    "generate": "graphql-codegen",
    "client:dev": "npm run dev -w packages/client",
    "server:dev": "npm run dev -w packages/server",
    "dev": "concurrently \"graphql-codegen --watch\" \"npm run client:dev\" \"npm run server:dev\"",
    "client:start": "npm run start -w packages/client",
    "server:start": "npm run start -w packages/server",
    "start": "concurrently \"npm run client:start\" \"npm run server:start\"",
    "prestart": "npm run generate"
  },
  "dependencies": {
    "@graphql-codegen/client-preset": "^2.1.1",
    "@graphql-typed-document-node/core": "^3.1.2",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@eddeee888/gcg-typescript-resolver-files": "^0.3.0",
    "@graphql-codegen/cli": "3.2.2",
    "@graphql-codegen/schema-ast": "^3.0.1",
    "@graphql-codegen/typescript-mongodb": "^2.4.6",
    "concurrently": "^7.6.0",
    "cross-env": "7.0.3",
    "prettier": "^2.8.4",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.0.2"
  },
  "workspaces": [
    "packages/client",
    "packages/server"
  ]
}
